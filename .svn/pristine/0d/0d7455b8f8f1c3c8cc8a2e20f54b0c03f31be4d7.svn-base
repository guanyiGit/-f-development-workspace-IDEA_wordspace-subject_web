                    {link: 'permission', name: '用户权限'},
                ]
            }
        },
        methods:{
            changdMenuHandle(index){
                const item = this.menus[index];
                this.$router.push({'name':item.link},_=>this.menuIndex = index-1);
                
            }
        }
    }
</script>

