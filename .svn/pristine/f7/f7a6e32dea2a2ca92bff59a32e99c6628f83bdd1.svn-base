                                     <el-radio disabled v-model="insertExam.echoSetting" :label=0 style="line-height: 35px">显示正确答案</el-radio>
                                     <el-radio disabled v-model="insertExam.echoSetting" :label=1 style="line-height: 35px">不显示正确答案</el-radio>
                                 </template>
                                 <template v-else>
                                     <el-radio  v-model="insertExam.echoSetting" :label=0 style="line-height: 35px">显示正确答案</el-radio>
                                     <el-radio  v-model="insertExam.echoSetting" :label=1 style="line-height: 35px">不显示正确答案</el-radio>
                                 </template>

