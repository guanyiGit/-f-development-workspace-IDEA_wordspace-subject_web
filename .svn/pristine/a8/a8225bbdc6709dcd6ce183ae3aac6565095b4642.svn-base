import Vue from 'vue'
import ElementUI from 'element-ui'
import axios from 'axios'
import moment from 'moment'

// let baseURL = 'http://localhost:8090'
let baseURL = 'http://192.168.0.69:8090'

// 添加请求拦截器 判断用户是否登录
// 创建axios实例
const $axios = axios.create({
    baseURL:baseURL,
    timeout: 50000,// 请求超时时间
})

// request拦截器
$axios.interceptors.request.use(
    function (config) {
        if (config.isloading) {
            let target = "object" == typeof config.isloading ? config.isloading : {
                lock: true,
                text: '正在处理，请稍后...',
                background: 'rgba(0, 0, 0, 0.3)',
                target: "string" == typeof config.isloading ? config.isloading : ".app"
            }
            axios.__loading__ = ElementUI.Loading.service(target)
        }

        return config
    },
    function (error) {
        Promise.reject(error)
    }
)

$axios.interceptors.response.use(
    function (response) {
        if (axios.__loading__)
            axios.__loading__.close();

        return response.data
    },
    function (error) {
        if (axios.__loading__)
            axios.__loading__.close();
        return Promise.reject(error)
    }
)


Vue.prototype.$axios = $axios;
Vue.prototype.$moment = moment;


//global filter 时间日期格式化
Vue.filter("formatDate", function (date, fmt = "yyyy-MM-dd HH:mm:ss") {
    date = date == undefined ? new Date() : date;
    date = typeof date == 'number' ? new Date(date) : date;
    fmt = fmt || 'yyyy-MM-dd HH:mm:ss';
    var obj =
        {
            'y': date.getFullYear(), // 年份，注意必须用getFullYear
            'M': date.getMonth() + 1, // 月份，注意是从0-11
            'd': date.getDate(), // 日期
            'q': Math.floor((date.getMonth() + 3) / 3), // 季度
            'w': date.getDay(), // 星期，注意是0-6
            'H': date.getHours(), // 24小时制
            'h': date.getHours() % 12 == 0 ? 12 : date.getHours() % 12, // 12小时制
            'm': date.getMinutes(), // 分钟
            's': date.getSeconds(), // 秒
            'S': date.getMilliseconds() // 毫秒
        };
    var week = ['天', '一', '二', '三', '四', '五', '六'];
    for (var i in obj) {
        fmt = fmt.replace(new RegExp(i + '+', 'g'), function (m) {
            var val = obj[i] + '';
            if (i == 'w') return (m.length > 2 ? '星期' : '周') + week[val];
            for (var j = 0, len = val.length; j < m.length - len; j++) val = '0' + val;
            return m.length == 1 ? val : val.substring(val.length - m.length);
        });
    }
    return fmt;
})

